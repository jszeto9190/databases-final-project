<!-- drivers_rentals.hbs -->
{{!-- Create a table --}}
<h2>Table of Drivers and Their Rentals</h2>
<table id="driversrentals-table">

    {{!-- Header section --}}
    <thead>
        <tr>
            <!-- Modify column names to display -->
            <th>Driver and Rental ID</th>
            <th>Driver Information</th>
            <th>Rental Information</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{!-- For each row, print the SQL data in order --}}
        {{#each data}}
        <tr data-value={{this.driverIDRentalID}}>
            <td>{{this.driverIDRentalID}}</td>
            <td>{{this.driverFullNameEmail}}</td>
            <td>{{this.makeNameModelNameYearDate}}</td>
            <td><button onclick="deleteDriverRental({{this.driverIDRentalID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_driver_rental.js"></script>

{{!-- Form to add a record to the table  --}}
<h2>Match a Driver to a Rental</h2>
<form id="add-driver-rental-form-ajax">
    <label for="input-fullDriverInfo">Drivers: </label>
    <select name="input-fullDriverInfo" id="mySelectFullDriverInfo">
        <option value="test">Make a Selection</option>
        {{#each driversData}}
        <option value="{{this.driverID}}">{{this.firstName}} {{this.middleName}} {{this.lastName}} ({{this.email}})</option>
        {{/each}}
    </select>

    <label for="input-fullRentalInfo">Rentals: </label>
    <select name="input-fullRentalInfo" id="mySelectFullRentalInfo">
        <option value="test">Make a Selection</option>
        {{#each rentalsData}}
        <option value="{{this.rentalID}}">{{this.makeNameModelNameYear}} from {{this.rentalStartDate}} to {{this.rentalEndDate}}</option>
        {{/each}}
    </select>  

    <input type="submit">
</form>
{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_driver_rental.js"></script>

{{!-- Form to update a record on the table  --}}
<h2>Update A Driver's Corresponding Rental </h2>
<form id="update-driver-rental-form-ajax">

    <label for="input-driverinformation"> (Driver and Rental ID) Driver Information: </label>
    <select name="input-driverinformation" id="mySelectDriverInformation">
        <option value="test">Select a Driver</option>
        {{#each data}}
        <option value="{{this.driverIDRentalID}}">({{this.driverIDRentalID}}) {{this.driverFullNameEmail}}</option>
        {{/each}}
    </select>

    <label for="input-rentalinformation">Rental Information: </label>
    <select name="input-rentalinformation" id="mySelectRentalInformation">
        <option value="test">Select a Rental</option>
        {{#each rentalsData}}
        <option value="{{this.rentalID}}">{{this.makeNameModelNameYear}} from {{this.rentalStartDate}} to {{this.rentalEndDate}}</option>
        {{/each}}
    </select>
    
    <input type="submit">
</form>

<script src="./js/update_driver_rental.js"></script>