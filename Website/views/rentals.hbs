<!-- rentals.hbs -->
{{!-- Create a table --}}
<table id="rentals-table">

    {{!-- Header section --}}
    <thead>
        <tr>
            <!-- Modify column names to display -->
            <th>Rental ID</th>
            <th>Vehicle ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the SQL data in order --}}
        {{#each data}}
        <tr data-value={{this.rentalID}}>
            <td>{{this.rentalID}}</td>
            <td>{{this.vehicleID}}</td>
            <td>{{this.startDate}}</td>
            <td>{{this.endDate}}</td>
            <td><button onclick="deleteRental({{this.rentalID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_rental.js"></script>

{{!-- Form to add a record to the table  --}}
<h2>Add a New Rental</h2>
<form id="add-rental-form-ajax">  
    <label for="input-startdate">Start Date: </label>
    <input type="date" name="input-startdate" id="input-startdate" placeholder="required">

    <label for="input-enddate">End Date: </label>
    <input type="date" name="input-enddate" id="input-enddate" placeholder="required">

    <input type="submit">
</form>
{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_rental.js"></script>

