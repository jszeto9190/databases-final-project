<!-- vehicles.hbs -->
{{!-- Create a table --}}
<h2>Table of Vehicles</h2>
<table id="vehicles-table">

    {{!-- Header section --}}
    <thead>
        <tr>
            <!-- Modify column names to display -->
            <th>Vehicle ID</th>
            <th>Address of Location</th>
            <th>Make Name</th>
            <th>Model (Year)</th>
            <th>Mileage</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{!-- For each row, print the SQL data in order --}}
        {{#each data}}
        <tr data-value={{this.vehicleID}}>
            <td>{{this.vehicleID}}</td>
            <td>{{this.fullAddress}}</td>
            <td>{{this.makeName}}</td>
            <td>{{this.modelNameYear}}</td>
            <td>{{this.vehicleMileage}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a New Vehicle</h2>
<form id="add-vehicle-form-ajax">

    <label for="input-fullAddress">Address of Location: </label>
    <select name="input-fullAddress" id="mySelectFullAddress">
        <option value="">None</option>
        {{#each locationsData}}
        <option value="{{this.locationID}}">{{this.address}}, {{this.city}}, {{this.state}}</option>
        {{/each}}
    </select>

    <label for="input-makeName">Make Name: </label>
    <select name="input-makeName" id="mySelectMakeName">
        <option value="test">Make a Selection</option>
        {{#each makesData}}
        <option value="{{this.makeID}}">{{this.makeName}}</option>
        {{/each}}
    </select>

    <label for="input-modelYear">Make Name: </label>
    <select name="input-modelYear" id="mySelectModelYear">
        <option value="test">Make a Selection</option>
        {{#each modelsData}}
        <option value="{{this.modelID}}">{{this.modelName}} ({{this.modelYear}})</option>
        {{/each}}
    </select>

    <label for="input-mileage">Mileage: </label>
    <input type="number" name="input-mileage" id="input-mileage" placeholder="required">

    <input type="submit">
</form>
{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_vehicle.js"></script>